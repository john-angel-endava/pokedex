{
  "name": "pokedex-monorepo",
  "private": true,
  "workspaces": ["apps/frontend", "apps/backend"],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "debug:backend": "pnpm --filter backend start:debug",
    "build": "pnpm run build -r",
    "test": "pnpm run test -r",
    "test:backend": "pnpm --filter backend test:watch"
  }
}